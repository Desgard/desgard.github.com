{
  "node": true,
  "browser": true,
  "esnext": true,
  "bitwise": true,
  "curly": true,
  "eqeqeq": true,
  "immed": true,
  "indent": 2,
  "newcap": true,
  "noarg": true,
  "quotmark": "single",
  "undef": true,
  "unused": "vars",
  "strict": true,
  "camelcase": false,
  "expr": true, // http://stackoverflow.com/questions/13815569/how-to-get-should-be-false-syntax-pass-jslint
  "globals": {
    "describe": false,
    "it": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false,
    "should": false
  }
}
